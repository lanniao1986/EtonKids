<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/head_bar_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/btn_font_color_white" >

            <ListView
                android:id="@+id/download_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:listSelector="#00000000" >
            </ListView>

            <TextView
                android:id="@+id/download_listview_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="╮(╯﹏╰）╭没有数据"
                android:textColor="@color/link_color"
                android:textSize="18sp"
                android:visibility="gone" >
            </TextView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.01"
            android:background="@drawable/poi_checkin_button"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/download_btn_recommend"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="@drawable/profile_header_add_friend_button_bg"
                android:gravity="center_vertical|center_horizontal"
                android:text="推荐"
                android:textColor="#ff005092"
                android:textSize="16sp" />

            <Button
                android:id="@+id/download_btn_plugin"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="0.1"
                android:background="@drawable/profile_header_add_friend_button_bg"
                android:gravity="center"
                android:text="插件"
                android:textColor="#ff005092"
                android:textSize="16sp" />

            <Button
                android:id="@+id/download_btn_manager"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:layout_weight="0.1"
                android:background="@drawable/profile_header_add_friend_button_bg"
                android:gravity="center"
                android:text="管理"
                android:textColor="#ff005092"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
